@model Tuple<IEnumerable<GeeksForLess_test.Models.Likes>, long>

<div class="message-likes-count addition-part mr-3">
    <button class="btn-action btn-like @(Model.Item1.FirstOrDefault(m => m.AspNetUsers.UserName == User.Identity.Name)
        != null ? "liked" : "")"  data-toggle="tooltip" data-action="like" 
        data-path="/Likes/@(Model.Item1.FirstOrDefault(m => m.AspNetUsers.UserName == User.Identity.Name)
        != null ? "RemoveLike" : "AddLike")/" data-target="@Model.Item2" type="button">
        <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
        <span class="count">
            @Model.Item1.Count()
        </span>
    </button>
</div>
